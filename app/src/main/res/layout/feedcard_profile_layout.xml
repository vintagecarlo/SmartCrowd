<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status11"
                android:text="Unverified"
                android:layout_marginLeft="130dp"
                android:textSize="@dimen/feed_item_profile_name"
                android:textStyle="bold"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#c0c0c0"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/status11"/>

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="@dimen/feed_item_profile_pic"
                android:layout_height="@dimen/feed_item_profile_pic"
                android:id="@+id/person_photo11"
                android:layout_marginRight="13dp"
                android:layout_marginTop="35dp"
                android:scaleType="fitCenter"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name11"
                android:text="Emma watson"
                android:layout_toRightOf="@+id/person_photo11"
                android:layout_marginTop="35dp"
                android:textSize="@dimen/feed_item_profile_name"
                android:textStyle="bold"
                />
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/person_tag_holder11"
                android:id="@+id/idhidden11"
                android:visibility="invisible"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_rate11"
                android:layout_toRightOf="@+id/person_photo11"
                android:layout_below="@+id/person_name11"
                style="?android:attr/ratingBarStyleSmall"
                android:textSize="@dimen/feed_item_timestamp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_rate111"
                android:text="22 years old"
                android:layout_toRightOf="@+id/person_photo11"
                android:layout_below="@+id/person_name11"
                android:textSize="@dimen/feed_item_timestamp"
                android:visibility="invisible"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_post_title11"
                android:textStyle="bold"
                android:text="22 years old"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/person_rate11"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_post_content11"
                android:text="gikamang ni hannah"
                android:paddingBottom="5dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="@dimen/feed_item_status_pad_left_right"
                android:paddingRight="@dimen/feed_item_status_pad_left_right"
                android:paddingTop="@dimen/feed_item_status_pad_top"
                android:layout_below="@+id/person_post_title11"/>

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/person_postphoto11"
                android:layout_below="@+id/person_post_content11"
                android:scaleType="fitXY"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_post_location11"
                android:layout_marginTop="10dp"
                android:text="Pardo sa amo, Cebu city"
                android:textSize="10dp"
                android:layout_below="@+id/person_postphoto11"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_tag_holder11"
                android:text="Tags:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:textSize="10dp"
                android:layout_toEndOf="@id/person_post_location11"
                android:layout_below="@+id/person_postphoto11"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_tag11"
                android:text="Accident"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@id/person_tag_holder11"
                android:textSize="10dp"
                android:layout_below="@+id/person_postphoto11"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>